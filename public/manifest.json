{
  "manifest_version": 3,
  "name": "RealEyes.ai â€” Detect Deepfakes Across Online Platforms",
  "description": "Adds an overlay icon on images which allows the image to be analyzed for deepfake manipulation",
  "version": "1.5.1",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "scripting",
    "cookies"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.realeyes.ai/*",
    "https://realeyes.ai/*",
    "https://signin.realeyes.ai/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*",
        "https://*.facebook.com/*",
        "https://*.twitter.com/*",
        "https://*.x.com/*",
        "https://*.instagram.com/*",
        "https://*.reddit.com/*"
      ],
      "js": ["social-content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://realeyes.ai/*"],
      "js": ["website-content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/realeyes-ai-icon.png"],
      "matches": [
        "https://*.linkedin.com/*",
        "https://*.instagram.com/*",
        "https://*.facebook.com/*",
        "https://*.twitter.com/*",
        "https://*.x.com/*",
        "https://*.reddit.com/*"
      ]
    }
  ],
  "icons": {
    "48": "icons/realeyes-ai-icon.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-ancestors 'none'"
  }
}
